<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ecuacion">

    <LinearLayout
        android:id="@+id/LinearLayoutH1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="INGRESE LA ECUACION"
            android:textSize="30dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayoutH2"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="78dp"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="65dp">


        <Spinner
            android:id="@+id/sp1"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <EditText
            android:id="@+id/a"
            android:layout_width="15dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"
            android:hint="A"
            android:inputType="number"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal|center"
            android:text="XÂ²"
            android:textSize="30dp" />

        <Spinner
            android:id="@+id/sp2"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center" />

        <EditText
            android:id="@+id/b"
            android:layout_width="15dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"
            android:hint="B"
            android:inputType="number"
            android:textSize="30dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="X"
            android:textSize="30dp" />

        <Spinner
            android:id="@+id/sp3"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center" />

        <EditText
            android:id="@+id/c"
            android:layout_width="15dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="30"
            android:gravity="center"
            android:hint="C"
            android:inputType="number"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="=0"
            android:textSize="30dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayoutH3"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="188dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/BtnResultado"
            android:layout_width="107dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="operar"
            android:text="Resolver" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="x1"
            android:textSize="30dp" />

        <EditText
            android:id="@+id/x1"
            android:layout_width="36dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:enabled="false"
            android:inputType="number" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="x2"
            android:textSize="30dp" />

        <EditText
            android:id="@+id/x2"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:enabled="false"
            android:inputType="number" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayoutH4"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_below="@+id/LinearLayoutH3"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:orientation="horizontal"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:layout_below="@+id/LinearLayoutH4"
        android:orientation="horizontal"

        >

    </LinearLayout>


</RelativeLayout>